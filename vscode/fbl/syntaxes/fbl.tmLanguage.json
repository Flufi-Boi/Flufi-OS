{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "fbl",
	"patterns": [
		{ "include": "#fclComments" },
		{ "include": "#comments" },
		{ "include": "#functions" },
		{ "include": "#commandBase" }
	],
	"repository": {
		"commandBase": {
			"match": "^(\\S+)( .+)?$",
			"captures": {
				"1": {
					"name": "keyword.operator"
				}
			}
		},
		"functions": {
			"match": "(~)( (.+))?",
			"captures": {
				"1": {
					"name": "keyword.control"
				},
				"3": {
					"name": "meta"
				}
			}
		},
		"fclComments": {
			"match": "(\\/\\/ )(\\w+)(: )(.+)",
			"captures": {
				"1": {
					"name": "comment"
				},
				"2": {
					"name": "support.type"
				},
				"3": {
					"name": "keyword.operator"
				},
				"4": {
					"name": "constant"
				}
			}
		},
		"comments": {
			"name": "comment",
			"match": "\\/\\/.+"
		}
	},
	"scopeName": "source.fbl"
}