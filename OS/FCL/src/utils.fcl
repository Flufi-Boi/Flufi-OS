
Arr<str> splitChar(str text, str splitter, Arr<str> rules) {
    Arr<str> tokens = [""];

    // state
    bool inDoubleQuotes = false;
    
    // rules
    bool intactQuotes = rules.contains("intactQuotes");

    for (i, text.length) {
        str char = text[i];

        if (char == "\\") {
            tokens[tokens.length-1] ++= char;
            continue;
        }

        if (intactQuotes) {
            if (char == "\"") {
                inDoubleQuotes = !inDoubleQuotes;
            }
        }

        if (!inDoubleQuotes) {
            if (char == splitter) {
                tokens.append("");
                continue;
            }
        }

        tokens[tokens.length-1] = tokens[tokens.length-1] ++ char;
    }

    return tokens;
}

str deEscape(str text) {
    str newStr = "";
    for (i, text.length) {
        str char = text[i];
        if (char == "\\") {
            char = text[i++];
            if (char == "n") {
                newStr ++= "\n";
                continue;
            }
            newStr ++= char;
            continue;
        }
    }
    return newStr;
}

bool inBox(num x, num y, num x1, num y1, num x2, num y2) {
    return x > x1 && y > y1 && x < x2 && y < y2;
}